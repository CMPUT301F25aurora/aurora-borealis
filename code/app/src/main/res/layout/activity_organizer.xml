<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/organizer_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp">

    <!-- Top App Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#7E57C2"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">

        <ImageButton
            android:id="@+id/btnBackOrganizer"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_arrow_back_24"
            android:tint="@android:color/white"
            android:contentDescription="@string/back" />

        <TextView
            android:id="@+id/dashboardTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="ðŸŽŸï¸ Organizer Dashboard"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnLogoutOrganizer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:textAllCaps="false"
            android:background="@android:color/transparent"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical"
        android:fadeScrollbars="true"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Tabs -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#EDE7F6"
                android:padding="6dp"
                android:elevation="6dp"
                android:layout_marginBottom="16dp">

                <Button
                    android:id="@+id/myEventsButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ðŸ“… My Events"
                    android:textStyle="bold"
                    android:backgroundTint="#7E57C2"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/createEventButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="âž• Create Event"
                    android:textStyle="bold"
                    android:backgroundTint="#D1C4E9"
                    android:textColor="#333333" />
            </LinearLayout>

            <!-- Section Label -->
            <TextView
                android:id="@+id/yourEventsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Events"
                android:textStyle="bold"
                android:textColor="#4A148C"
                android:textSize="18sp"
                android:layout_marginBottom="12dp" />

            <!-- Dynamic Event List -->
            <LinearLayout
                android:id="@+id/eventListContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

        </LinearLayout>
    </ScrollView>

    <!-- Bottom navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#F3E5F5"
        android:elevation="8dp"
        android:weightSum="3"
        android:paddingHorizontal="32dp">

        <TextView
            android:id="@+id/bottomHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="ðŸ "
            android:textSize="24sp" />

        <TextView
            android:id="@+id/bottomProfile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="ðŸ‘¤"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/bottomAlerts"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="ðŸ””"
            android:textSize="24sp" />
    </LinearLayout>

</LinearLayout>
