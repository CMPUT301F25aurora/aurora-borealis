<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/adminLogTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notification sent"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#222222" />

        <TextView
            android:id="@+id/adminLogBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Organizer A notified 25 entrants about Event X"
            android:textSize="13sp"
            android:textColor="#666666"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/adminLogTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="June 10, 2025 at 14:32"
            android:textSize="12sp"
            android:textColor="#999999"
            android:layout_marginTop="4dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
