<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- MAIN CONTENT -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#233d4d"
        android:fitsSystemWindows="true"
        android:clipToPadding="false">

        <LinearLayout
            android:id="@+id/headerContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="24dp"
            android:paddingBottom="12dp"
            android:paddingHorizontal="12dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/titleEvents"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Discover Events"
                android:textColor="#fe7f2d"
                android:textSize="26sp"
                android:fontFamily="sans-serif-medium" />

            <Button
                android:id="@+id/btnFilter"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:text="Filter"
                android:textAllCaps="false"
                android:background="@drawable/bg_input_sharp"
                android:backgroundTint="#2f4858"
                android:textColor="#fe7f2d"
                android:textSize="12sp"/>

            <Button
                android:id="@+id/logoutButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Logout"
                android:textAllCaps="false"
                android:background="@drawable/bg_input_sharp"
                android:backgroundTint="#2f4858"
                android:textColor="#fe7f2d"
                android:textSize="12sp" />
        </LinearLayout>

        <EditText
            android:id="@+id/searchEvents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginBottom="12dp"
            android:hint="Search events..."
            android:textColorHint="#90A4AE"
            android:textColor="@android:color/white"
            android:padding="16dp"
            android:background="@drawable/bg_input_sharp"
            android:backgroundTint="#2f4858"
            android:drawableStart="@android:drawable/ic_menu_search"
            android:drawableTint="#fe7f2d"
            android:drawablePadding="12dp"
            android:inputType="text" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:scrollbars="none"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnAll"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="All"
                    android:textAllCaps="false"
                    android:layout_margin="4dp"
                    android:background="@drawable/bg_input_sharp"
                    android:backgroundTint="#fe7f2d"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/btnMusic"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Music"
                    android:layout_margin="4dp"
                    android:background="@drawable/bg_input_sharp"
                    android:backgroundTint="#2f4858"
                    android:textColor="#FFFFFF"/>

                <Button
                    android:id="@+id/btnSports"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Sports"
                    android:layout_margin="4dp"
                    android:background="@drawable/bg_input_sharp"
                    android:backgroundTint="#2f4858"
                    android:textColor="#FFFFFF"/>

                <Button
                    android:id="@+id/btnEducation"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Education"
                    android:layout_margin="4dp"
                    android:background="@drawable/bg_input_sharp"
                    android:backgroundTint="#2f4858"
                    android:textColor="#FFFFFF"/>

                <Button
                    android:id="@+id/btnArts"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Arts"
                    android:layout_margin="4dp"
                    android:background="@drawable/bg_input_sharp"
                    android:backgroundTint="#2f4858"
                    android:textColor="#FFFFFF"/>

                <Button
                    android:id="@+id/btnTechnology"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Tech"
                    android:layout_margin="4dp"
                    android:background="@drawable/bg_input_sharp"
                    android:backgroundTint="#2f4858"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>
        </HorizontalScrollView>

        <Button
            android:id="@+id/btnScanQr"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="8dp"
            android:text="Scan Event QR"
            android:textAllCaps="false"
            android:backgroundTint="#fe7f2d"
            android:textColor="#233d4d"
            android:textSize="16sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerEvents"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingHorizontal="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="#2f4858"
            android:gravity="center"
            android:elevation="8dp">

            <Button
                android:id="@+id/navEvents"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Events"
                android:textAllCaps="false"
                android:background="@android:color/transparent"
                android:textColor="#fe7f2d" />

            <Button
                android:id="@+id/navProfile"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Profile"
                android:textAllCaps="false"
                android:background="@android:color/transparent"
                android:textColor="#fe7f2d" />

            <Button
                android:id="@+id/navAlerts"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Alerts"
                android:textAllCaps="false"
                android:background="@android:color/transparent"
                android:textColor="#fe7f2d" />
        </LinearLayout>
    </LinearLayout>

    <!-- FLOATING FAB FOR ROLE SWITCH -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/roleSwitchFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Organizer Mode"
        android:textColor="#233d4d"
        android:textAllCaps="false"

        android:layout_marginEnd="20dp"
        android:layout_marginBottom="90dp"

        android:backgroundTint="#fe7f2d"
        android:elevation="12dp"
        android:layout_gravity="bottom|end">

    </com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton>


</FrameLayout>
