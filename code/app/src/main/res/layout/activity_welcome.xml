<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/welcomeRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#233d4d"
    android:gravity="center_horizontal"
    android:padding="24dp"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/welcomeLogo"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:background="@drawable/logo_circle_mask"
            android:backgroundTint="#2f4858"
            android:src="@drawable/ourlogo"
            android:scaleType="centerCrop"
            android:clipToOutline="true"
            android:contentDescription="Aurora Chance Logo" />

        <TextView
            android:id="@+id/welcomeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AURORA"
            android:textSize="32sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#fe7f2d"
            android:letterSpacing="0.1"
            android:layout_marginTop="32dp" />

        <TextView
            android:id="@+id/welcomeTitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CHANCE"
            android:textSize="32sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#fe7f2d"
            android:letterSpacing="0.1" />

        <TextView
            android:id="@+id/welcomeSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connecting moments that matter"
            android:textColor="#B0BEC5"
            android:textSize="14sp"
            android:layout_marginTop="12dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tapAnywhere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:background="@drawable/bg_input_sharp"
        android:backgroundTint="#2f4858"
        android:paddingHorizontal="24dp"
        android:paddingVertical="12dp"
        android:text="Tap anywhere to continue"
        android:textColor="#fe7f2d"
        android:fontFamily="sans-serif-medium"
        android:textSize="14sp"
        android:drawableStart="@drawable/dot_white"
        android:drawableTint="#fe7f2d"
        android:drawablePadding="12dp" />
</LinearLayout>