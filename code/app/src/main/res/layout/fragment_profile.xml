<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#233d4d"
    android:fitsSystemWindows="true"
    android:clipToPadding="false">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/status_bar_height"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageButton
                android:id="@+id/backButtonProfile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_arrow_back_24"
                android:tint="#fe7f2d"
                android:contentDescription="@string/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Profile"
                android:textSize="22sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="#fe7f2d" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_input_sharp"
            android:backgroundTint="#2f4858">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/avatarCircle"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/circle_background"
                    android:backgroundTint="#233d4d"
                    android:src="@mipmap/ic_launcher_round"
                    android:padding="4dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <ImageButton
                    android:id="@+id/btnEditPhoto"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/circle_background"
                    android:backgroundTint="#fe7f2d"
                    android:src="@android:drawable/ic_menu_camera"
                    android:tint="#233d4d"
                    android:padding="8dp"
                    android:elevation="4dp"
                    app:layout_constraintBottom_toBottomOf="@id/avatarCircle"
                    app:layout_constraintEnd_toEndOf="@id/avatarCircle" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/headerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:text="Entrant Name"
                android:textSize="20sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/roleBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:text="Entrant"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@drawable/bg_input_sharp"
                android:backgroundTint="#233d4d"
                android:textColor="#fe7f2d" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp"
            android:padding="16dp"
            android:background="@drawable/bg_input_sharp"
            android:backgroundTint="#2f4858">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Profile Information"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="#fe7f2d" />
            <TextView
                android:id="@+id/editToggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:textColor="#B0BEC5" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_input_sharp"
            android:backgroundTint="#2f4858">

            <TextView android:text="Full Name" android:textColor="#B0BEC5" android:textSize="12sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <EditText android:id="@+id/inputFullName" android:layout_width="match_parent" android:layout_height="48dp" android:background="@drawable/bg_input_sharp" android:backgroundTint="#233d4d" android:padding="12dp" android:layout_marginTop="4dp" android:enabled="false" android:textColor="@android:color/white" android:hint="Name" android:textColorHint="#546E7A"/>

            <TextView android:text="Email" android:textColor="#B0BEC5" android:textSize="12sp" android:layout_marginTop="12dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <EditText android:id="@+id/inputEmail" android:layout_width="match_parent" android:layout_height="48dp" android:background="@drawable/bg_input_sharp" android:backgroundTint="#233d4d" android:padding="12dp" android:layout_marginTop="4dp" android:enabled="false" android:textColor="@android:color/white" android:hint="Email" android:textColorHint="#546E7A"/>

            <TextView android:text="Phone" android:textColor="#B0BEC5" android:textSize="12sp" android:layout_marginTop="12dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <EditText android:id="@+id/inputPhone" android:layout_width="match_parent" android:layout_height="48dp" android:background="@drawable/bg_input_sharp" android:backgroundTint="#233d4d" android:padding="12dp" android:layout_marginTop="4dp" android:enabled="false" android:textColor="@android:color/white" android:hint="Phone" android:textColorHint="#546E7A"/>

            <Button
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Save"
                android:layout_marginTop="16dp"
                android:backgroundTint="#fe7f2d"
                android:textColor="#233d4d"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:layout_marginTop="16dp" android:padding="16dp" android:background="@drawable/bg_input_sharp" android:backgroundTint="#2f4858">
            <TextView android:text="My Activity" android:fontFamily="sans-serif-medium" android:textColor="#fe7f2d" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginTop="12dp">
                <LinearLayout android:layout_width="0dp" android:layout_weight="1" android:layout_height="80dp" android:orientation="vertical" android:gravity="center" android:background="@drawable/bg_input_sharp" android:backgroundTint="#233d4d">
                    <TextView android:text="Joined" android:textColor="#B0BEC5" android:textSize="12sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <TextView android:id="@+id/joinedCount" android:text="0" android:textStyle="bold" android:textSize="24sp" android:textColor="#fe7f2d" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout android:layout_width="0dp" android:layout_weight="1" android:layout_height="80dp" android:orientation="vertical" android:gravity="center" android:layout_marginStart="12dp" android:background="@drawable/bg_input_sharp" android:backgroundTint="#233d4d">
                    <TextView android:text="Wins" android:textColor="#B0BEC5" android:textSize="12sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <TextView android:id="@+id/winsCount" android:text="0" android:textStyle="bold" android:textSize="24sp" android:textColor="#fe7f2d" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:layout_marginTop="16dp">
            <Button
                android:id="@+id/btnEventHistory"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="Event History"
                android:textAllCaps="false"
                android:background="@drawable/bg_input_sharp"
                android:backgroundTint="#2f4858"
                android:textColor="#FFFFFF"/>

            <Button
                android:id="@+id/btnNotifSettings"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="Notification Settings"
                android:textAllCaps="false"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_input_sharp"
                android:backgroundTint="#2f4858"
                android:textColor="#FFFFFF"/>

            <Button
                android:id="@+id/btnDeleteAccount"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="Delete Account"
                android:textAllCaps="false"
                android:layout_marginTop="8dp"
                android:backgroundTint="#D32F2F"
                android:textColor="@android:color/white"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>