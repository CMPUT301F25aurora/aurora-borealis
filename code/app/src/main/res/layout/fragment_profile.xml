<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_deep_space">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageButton
                android:id="@+id/backButtonProfile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_arrow_back_24"
                android:contentDescription="@string/back" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Profile"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_glass_card">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/avatarCircle"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="#40FFFFFF"
                    android:src="@mipmap/ic_launcher_round"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <ImageButton
                    android:id="@+id/btnEditPhoto"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/bg_welcome_button"
                    android:src="@android:drawable/ic_menu_camera"
                    android:tint="@android:color/white"
                    android:padding="6dp"
                    android:elevation="4dp"
                    app:layout_constraintBottom_toBottomOf="@id/avatarCircle"
                    app:layout_constraintEnd_toEndOf="@id/avatarCircle" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/headerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:text="Entrant"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/roleBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6dp"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                android:text="Entrant"
                android:textSize="12sp"
                android:background="@drawable/bg_transparent_input"
                android:textColor="#E0E0E0" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp"
            android:padding="12dp"
            android:background="@drawable/bg_glass_card">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Profile Information"
                android:textStyle="bold"
                android:textColor="@android:color/white" />
            <TextView
                android:id="@+id/editToggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:textColor="#BBDEFB" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="@drawable/bg_glass_card">
            <TextView android:text="Full Name" android:textColor="#E0E0E0" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <EditText android:id="@+id/inputFullName" android:layout_width="match_parent" android:layout_height="48dp" android:background="@drawable/bg_transparent_input" android:padding="12dp" android:enabled="false" android:textColor="@android:color/white" android:hint="Name"/>

            <TextView android:text="Email" android:textColor="#E0E0E0" android:layout_marginTop="12dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <EditText android:id="@+id/inputEmail" android:layout_width="match_parent" android:layout_height="48dp" android:background="@drawable/bg_transparent_input" android:padding="12dp" android:enabled="false" android:textColor="@android:color/white" android:hint="Email"/>

            <TextView android:text="Phone" android:textColor="#E0E0E0" android:layout_marginTop="12dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <EditText android:id="@+id/inputPhone" android:layout_width="match_parent" android:layout_height="48dp" android:background="@drawable/bg_transparent_input" android:padding="12dp" android:enabled="false" android:textColor="@android:color/white" android:hint="Phone"/>

            <Button android:id="@+id/btnSave" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Save" android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:layout_marginTop="16dp" android:padding="12dp" android:background="@drawable/bg_glass_card">
            <TextView android:text="My Activity" android:textStyle="bold" android:textColor="@android:color/white" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginTop="12dp">
                <LinearLayout android:layout_width="0dp" android:layout_weight="1" android:layout_height="80dp" android:orientation="vertical" android:gravity="center" android:background="@drawable/bg_transparent_input">
                    <TextView android:text="Joined" android:textColor="#E0E0E0" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <TextView android:id="@+id/joinedCount" android:text="0" android:textStyle="bold" android:textSize="18sp" android:textColor="@android:color/white" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout android:layout_width="0dp" android:layout_weight="1" android:layout_height="80dp" android:orientation="vertical" android:gravity="center" android:layout_marginStart="12dp" android:background="@drawable/bg_transparent_input">
                    <TextView android:text="Wins" android:textColor="#E0E0E0" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <TextView android:id="@+id/winsCount" android:text="0" android:textStyle="bold" android:textSize="18sp" android:textColor="@android:color/white" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:layout_marginTop="16dp">
            <Button android:id="@+id/btnEventHistory" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Event History" android:background="@drawable/bg_glass_button" android:textColor="@android:color/white"/>
            <Button android:id="@+id/btnNotifSettings" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Notification Settings" android:layout_marginTop="8dp" android:background="@drawable/bg_glass_button" android:textColor="@android:color/white"/>
            <Button android:id="@+id/btnDeleteAccount" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Delete Account" android:layout_marginTop="8dp" android:backgroundTint="#D32F2F" android:textColor="@android:color/white"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>