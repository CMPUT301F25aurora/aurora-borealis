<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/bg_card_vibrant"
    android:padding="16dp"
    android:layout_marginTop="10dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/adminPosterThumb"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="centerCrop"
        android:background="@drawable/bg_transparent_input"
        android:layout_marginRight="12dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/adminImageEventTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Title"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/adminImageEventId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event ID"
            android:textSize="12sp"
            android:textColor="#B0BEC5" />

        <TextView
            android:id="@+id/adminImageOrganizer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Organizer Email"
            android:textSize="13sp"
            android:textColor="#E0E0E0" />

    </LinearLayout>

    <Button
        android:id="@+id/adminDeleteImageBtn"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Remove"
        android:textAllCaps="false"
        android:backgroundTint="#D32F2F"
        android:textColor="#FFFFFF" />

</LinearLayout>