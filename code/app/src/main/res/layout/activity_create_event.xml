<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#233d4d"
    android:fillViewport="true"
    android:scrollbars="none"
    android:fitsSystemWindows="true"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="20dp"
            android:paddingTop="24dp"
            android:paddingBottom="20dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_arrow_back_24"
                app:tint="#fe7f2d"
                android:contentDescription="Back"
                android:padding="8dp" />

            <TextView
                android:id="@+id/createEventTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create Event"
                android:textSize="26sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="#fe7f2d"
                android:layout_marginStart="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="20dp"
            android:padding="8dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="32dp">

                <ImageView
                    android:id="@+id/imgPosterPreview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:background="#2f4858"
                    android:contentDescription="Event poster preview"
                    android:visibility="gone"/>

                <LinearLayout
                    android:id="@+id/posterPlaceholderContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="#2f4858">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/imageicon"
                        app:tint="#fe7f2d"
                        android:layout_marginBottom="12dp"/>

                    <Button
                        android:id="@+id/btnChoosePoster"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Upload Cover Image"
                        android:textSize="13sp"
                        android:textAllCaps="false"
                        android:textColor="#233d4d"
                        android:textStyle="bold"
                        android:backgroundTint="#fe7f2d"
                        android:paddingHorizontal="20dp"/>
                </LinearLayout>
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Details"
                android:fontFamily="sans-serif-medium"
                android:textSize="20sp"
                android:textColor="#fe7f2d"
                android:layout_marginBottom="16dp" />

            <EditText
                android:id="@+id/editTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Event Name"
                android:textColorHint="#90A4AE"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_input_sharp"
                android:backgroundTint="#2f4858"
                android:padding="16dp"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:inputType="textCapWords"
                android:layout_marginBottom="12dp" />

            <Spinner
                android:id="@+id/spinnerCategory"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/bg_input_sharp"
                android:backgroundTint="#2f4858"
                android:paddingStart="0dp"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                android:spinnerMode="dropdown"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/editDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Description"
                android:textColorHint="#90A4AE"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_input_sharp"
                android:backgroundTint="#2f4858"
                android:padding="16dp"
                android:minLines="3"
                android:gravity="top"
                android:inputType="textMultiLine|textCapSentences"
                android:layout_marginBottom="32dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:fontFamily="sans-serif-medium"
                android:textSize="20sp"
                android:textColor="#fe7f2d"
                android:layout_marginBottom="16dp" />

            <AutoCompleteTextView
                android:id="@+id/editLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Venue or Address"
                android:textColorHint="#90A4AE"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_input_sharp"
                android:backgroundTint="#2f4858"
                android:padding="16dp"
                android:inputType="textCapWords"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/btnPickEventLocation"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Select on Map"
                android:textAllCaps="false"
                android:textColor="#233d4d"
                android:textStyle="bold"
                android:backgroundTint="#fe7f2d"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="4dp"
                android:layout_marginBottom="32dp">

                <CheckBox
                    android:id="@+id/checkGeoRequired"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="#fe7f2d" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Strict Geolocation Required"
                    android:textSize="13sp"
                    android:textColor="#B0BEC5"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Schedule"
                android:fontFamily="sans-serif-medium"
                android:textSize="20sp"
                android:textColor="#fe7f2d"
                android:layout_marginBottom="16dp" />

            <TextView
                android:text="Starts"
                android:textColor="#B0BEC5"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <Button
                    android:id="@+id/btnPickStartDate"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1.5"
                    android:text="Select Date"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/bg_input_sharp"
                    android:backgroundTint="#2f4858"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btnPickStartTime"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Time"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/bg_input_sharp"
                    android:backgroundTint="#2f4858" />
            </LinearLayout>
            <TextView
                android:id="@+id/txtStartDateTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="12sp"
                android:textColor="#fe7f2d"
                android:layout_marginBottom="16dp"
                android:gravity="end"/>

            <TextView
                android:text="Ends (Optional)"
                android:textColor="#B0BEC5"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <Button
                    android:id="@+id/btnPickEndDate"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1.5"
                    android:text="Select Date"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/bg_input_sharp"
                    android:backgroundTint="#2f4858"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btnPickEndTime"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Time"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/bg_input_sharp"
                    android:backgroundTint="#2f4858" />
            </LinearLayout>
            <TextView
                android:id="@+id/txtEndDateTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="12sp"
                android:textColor="#fe7f2d"
                android:layout_marginBottom="32dp"
                android:gravity="end"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registration Window"
                android:fontFamily="sans-serif-medium"
                android:textSize="20sp"
                android:textColor="#fe7f2d"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="Opens"
                    android:textColor="#B0BEC5"
                    android:textSize="13sp"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/btnPickRegStartDate"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Date"
                    android:textSize="12sp"
                    android:background="@drawable/bg_input_sharp"
                    android:backgroundTint="#2f4858"
                    android:textColor="@android:color/white"
                    android:layout_marginEnd="4dp"/>

                <Button
                    android:id="@+id/btnPickRegStartTime"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Time"
                    android:textSize="12sp"
                    android:background="@drawable/bg_input_sharp"
                    android:backgroundTint="#2f4858"
                    android:textColor="@android:color/white"/>
            </LinearLayout>
            <TextView
                android:id="@+id/txtRegStartDateTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="11sp"
                android:textColor="#fe7f2d"
                android:gravity="end"
                android:layout_marginBottom="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="Closes"
                    android:textColor="#B0BEC5"
                    android:textSize="13sp"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/btnPickRegEndDate"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Date"
                    android:textSize="12sp"
                    android:background="@drawable/bg_input_sharp"
                    android:backgroundTint="#2f4858"
                    android:textColor="@android:color/white"
                    android:layout_marginEnd="4dp"/>

                <Button
                    android:id="@+id/btnPickRegEndTime"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Time"
                    android:textSize="12sp"
                    android:background="@drawable/bg_input_sharp"
                    android:backgroundTint="#2f4858"
                    android:textColor="@android:color/white"/>
            </LinearLayout>
            <TextView
                android:id="@+id/txtRegEndDateTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="11sp"
                android:textColor="#fe7f2d"
                android:gravity="end"
                android:layout_marginBottom="32dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Capacity &amp; Lottery"
                android:fontFamily="sans-serif-medium"
                android:textSize="20sp"
                android:textColor="#fe7f2d"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Waitlist Cap"
                        android:textColor="#B0BEC5"
                        android:textSize="12sp"
                        android:layout_marginBottom="8dp"/>

                    <EditText
                        android:id="@+id/editMaxSpots"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_input_sharp"
                        android:backgroundTint="#2f4858"
                        android:padding="12dp"
                        android:hint="âˆž"
                        android:gravity="center"
                        android:textColorHint="#80FFFFFF"
                        android:textColor="@android:color/white"
                        android:inputType="number" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Winner Count"
                        android:textColor="#B0BEC5"
                        android:textSize="12sp"
                        android:layout_marginBottom="8dp"/>

                    <EditText
                        android:id="@+id/editLotterySampleSize"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_input_sharp"
                        android:backgroundTint="#2f4858"
                        android:padding="12dp"
                        android:hint="0"
                        android:gravity="center"
                        android:textColorHint="#80FFFFFF"
                        android:textColor="@android:color/white"
                        android:inputType="number" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btnCreateEvent"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Create Event"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textColor="#233d4d"
                android:backgroundTint="#fe7f2d"
                android:elevation="0dp"
                android:layout_marginTop="16dp"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>