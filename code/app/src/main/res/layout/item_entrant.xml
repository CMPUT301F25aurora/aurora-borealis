<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Checkbox -->
        <CheckBox
            android:id="@+id/checkSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:buttonTint="#fe7f2d" />

        <!-- Name -->
        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/checkSelect"
            android:layout_marginStart="12dp"
            android:text="User Name"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="16sp" />

        <!-- Email -->
        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvName"
            android:layout_toEndOf="@id/checkSelect"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:text="email@example.com"
            android:textColor="#90A4AE"
            android:textSize="13sp" />

        <!-- Status badge -->
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tvName"
            android:layout_alignParentEnd="true"
            android:text="Waiting"
            android:textSize="12sp"
            android:textColor="#fe7f2d"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:background="@drawable/bg_input_sharp"
            android:backgroundTint="#233d4d" />

        <!-- DELETE button -->
        <ImageButton
            android:id="@+id/btnDeleteEntrant"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_below="@id/tvStatus"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="6dp"
            android:background="@android:color/transparent"
            android:contentDescription="Delete"
            app:srcCompat="@drawable/ic_delete_red_24"
            app:tint="#FF3B30"
            android:visibility="gone" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
