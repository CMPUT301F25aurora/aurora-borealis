<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#233d4d">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="24dp">

            <ImageButton
                android:id="@+id/btnBackEventDetails"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_arrow_back_24"
                android:contentDescription="@string/back"
                android:tint="#fe7f2d" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Event Details"
                android:textSize="22sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="#fe7f2d" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_input_sharp"
            android:backgroundTint="#2f4858"
            android:padding="16dp"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/detailTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Title"
                android:textSize="20sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="#fe7f2d" />

            <TextView
                android:id="@+id/detailDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textColor="#B0BEC5"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/detailLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textColor="#B0BEC5"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/detailCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textColor="#B0BEC5"
                android:layout_marginTop="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Capacity"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginTop="12dp" />

            <TextView
                android:id="@+id/detailCapacity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#B0BEC5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registration window"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginTop="12dp" />

            <TextView
                android:id="@+id/detailRegWindow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Not set"
                android:textColor="#B0BEC5" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_input_sharp"
            android:backgroundTint="#2f4858"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Waiting List"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="#fe7f2d" />

            <LinearLayout
                android:id="@+id/waitingListContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp" />

            <Button
                android:id="@+id/btnNotifyWaiting"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Notify Waiting List"
                android:layout_marginTop="16dp"
                android:backgroundTint="#fe7f2d"
                android:textColor="#233d4d"
                android:textStyle="bold"
                android:textAllCaps="false"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>