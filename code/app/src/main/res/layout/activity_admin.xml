<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFDFB"
    tools:context=".AdminActivity">

    <!-- Header with yellow gradient and 4 icon cards -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/bg_header_gradient">

        <TextView
            android:id="@+id/adminTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admin Panel"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="#000000"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/adminSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="System management"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginTop="4dp" />

        <!-- Grid 2x2 of summary cards -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <!-- First row: Events + Users -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <!-- Events card -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:background="@drawable/bg_card"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/summaryEventsIcon"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/schedulefinal"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/summaryEventsCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="24"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#000000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Events"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <Space
                    android:layout_width="8dp"
                    android:layout_height="0dp" />

                <!-- Users/Profiles card -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:background="@drawable/bg_card"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/summaryProfilesIcon"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/groupimage"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/summaryProfilesCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1,847"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#000000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Users"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:layout_marginTop="2dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Second row: Images + Logs -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="8dp">

                <!-- Images card -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:background="@drawable/bg_card"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/summaryImagesIcon"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/imageicon"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/summaryImagesCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="156"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#000000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Images"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <Space
                    android:layout_width="8dp"
                    android:layout_height="0dp" />

                <!-- Logs card -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:background="@drawable/bg_card"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/summaryLogsIcon"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/documentimage"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/summaryLogsCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="892"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#000000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Logs"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:layout_marginTop="2dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Search and chips -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="16dp"
        android:orientation="vertical">

        <!-- Search bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_search"
            android:orientation="horizontal"
            android:padding="8dp"
            android:elevation="3dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@android:drawable/ic_menu_search"
                app:tint="@android:color/darker_gray"
                android:contentDescription="@string/search_icon" />

            <EditText
                android:id="@+id/adminSearch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Search events, profiles, images"
                android:background="@null"
                android:paddingStart="8dp"
                android:textColor="#000000"
                android:textColorHint="#999999" />
        </LinearLayout>

        <!-- Category chips -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:paddingTop="12dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/chipAdminEvents"
                    style="@style/CategoryChip"
                    android:text="Events" />

                <Button
                    android:id="@+id/chipAdminProfiles"
                    style="@style/CategoryChip"
                    android:text="Profiles" />

                <Button
                    android:id="@+id/chipAdminImages"
                    style="@style/CategoryChip"
                    android:text="Images" />

                <Button
                    android:id="@+id/chipAdminLogs"
                    style="@style/CategoryChip"
                    android:text="Notification logs" />
            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:id="@+id/adminSectionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Events"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginTop="12dp" />
    </LinearLayout>

    <!-- Main list area -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/adminRecycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        tools:listitem="@layout/item_admin_event" />

    <!-- Bottom hint -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Use Events, Profiles, Images or Notification logs above to browse and remove items."
        android:textSize="12sp"
        android:textColor="#777777"
        android:padding="8dp"
        android:gravity="center_horizontal" />

</LinearLayout>
