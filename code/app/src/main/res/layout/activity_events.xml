<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_gradient_deep_space"
    android:fitsSystemWindows="true"
    android:clipToPadding="false">

    <LinearLayout
        android:id="@+id/headerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/status_bar_height"
        android:padding="12dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/titleEvents"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Discover Events"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnFilter"
            android:layout_width="98dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:text="Filter"
            android:textAllCaps="false"
            android:background="@drawable/bg_glass_button"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/logoutButton"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Logout"
            android:textAllCaps="false"
            android:background="@drawable/bg_glass_button"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <EditText
        android:id="@+id/searchEvents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginBottom="8dp"
        android:hint="Search events"
        android:textColorHint="#C0C0C0"
        android:textColor="@android:color/white"
        android:padding="12dp"
        android:background="@drawable/bg_transparent_input"
        android:drawableStart="@android:drawable/ic_menu_search"
        android:drawablePadding="8dp"
        android:inputType="text" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="8dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All"
                android:textAllCaps="false"
                android:layout_margin="4dp"
                android:background="@drawable/bg_glass_button"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btnMusic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Music"
                android:textAllCaps="false"
                android:layout_margin="4dp"
                android:background="@drawable/bg_glass_button"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btnSports"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sports"
                android:textAllCaps="false"
                android:layout_margin="4dp"
                android:background="@drawable/bg_glass_button"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btnEducation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Education"
                android:textAllCaps="false"
                android:layout_margin="4dp"
                android:background="@drawable/bg_glass_button"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btnArts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arts"
                android:textAllCaps="false"
                android:layout_margin="4dp"
                android:background="@drawable/bg_glass_button"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btnTechnology"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tech"
                android:textAllCaps="false"
                android:layout_margin="4dp"
                android:background="@drawable/bg_glass_button"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </HorizontalScrollView>

    <Button
        android:id="@+id/btnScanQr"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="12dp"
        android:text="ðŸ“· Scan Event QR"
        android:textAllCaps="false"
        android:background="@drawable/bg_card_vibrant"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerEvents"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#80000000"
        android:gravity="center">

        <Button
            android:id="@+id/navEvents"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Events"
            android:textAllCaps="false"
            android:background="@android:color/transparent"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/navProfile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Profile"
            android:textAllCaps="false"
            android:background="@android:color/transparent"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/navAlerts"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Alerts"
            android:textAllCaps="false"
            android:background="@android:color/transparent"
            android:textColor="@android:color/white" />
    </LinearLayout>

</LinearLayout>
