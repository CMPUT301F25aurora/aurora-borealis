<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_gradient_deep_space"> <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingStart="8dp"
    android:paddingEnd="8dp">

    <ImageButton
        android:id="@+id/btnBackEvent"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_arrow_back_24"
        android:tint="@android:color/white"
        android:contentDescription="@string/back" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Event Details"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

</LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgBanner"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@drawable/bg_transparent_input"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/txtJoinedBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JOINED"
                android:textColor="#00E676"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Title"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/txtSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subtitle"
                android:textColor="#E0E0E0"
                android:textSize="14sp"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/txtTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textColor="#E0E0E0"
                android:layout_marginTop="6dp" />

            <TextView
                android:id="@+id/txtLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textColor="#E0E0E0"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/txtRegWindow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registration window"
                android:textColor="#E0E0E0"
                android:layout_marginTop="6dp" />

            <TextView
                android:id="@+id/txtStats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spots / Joined"
                android:textColor="#E0E0E0"
                android:layout_marginTop="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About this event"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginTop="12dp" />

            <TextView
                android:id="@+id/txtAbout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textColor="#CCCCCC"
                android:layout_marginTop="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center">

                <Button
                    android:id="@+id/btnJoinLeave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Join Waiting List"
                    android:textAllCaps="false"
                    android:background="@drawable/bg_glass_button"
                    android:textColor="@android:color/white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center">

                <Button
                    android:id="@+id/btnCriteria"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Criteria"
                    android:textAllCaps="false"
                    android:background="@drawable/bg_glass_button"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/btnShowQr"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Show QR"
                    android:textAllCaps="false"
                    android:background="@drawable/bg_glass_button"
                    android:textColor="@android:color/white" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>