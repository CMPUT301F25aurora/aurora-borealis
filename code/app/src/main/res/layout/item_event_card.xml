<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#2f4858"
    app:strokeColor="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/eventTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Event Title"
                    android:textColor="#fe7f2d"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/eventDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Date"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/eventStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Active"
                android:textColor="#233d4d"
                android:textSize="11sp"
                android:textStyle="bold"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                android:background="@drawable/bg_input_sharp"
                android:backgroundTint="#fe7f2d"/>
        </LinearLayout>

        <TextView
            android:id="@+id/eventStats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Max spots: 0"
            android:textColor="#B0BEC5"
            android:textSize="13sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#233d4d"
            android:layout_marginVertical="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnLottery"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/bg_input_sharp"
                android:backgroundTint="#233d4d"
                android:elevation="0dp"
                android:text="Lottery"
                android:textAllCaps="false"
                android:textColor="#fe7f2d"
                android:textSize="12sp"
                android:layout_marginEnd="4dp"/>

            <Button
                android:id="@+id/btnShowQR"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/bg_input_sharp"
                android:backgroundTint="#233d4d"
                android:elevation="0dp"
                android:text="QR Code"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_marginHorizontal="4dp"/>

            <Button
                android:id="@+id/btnMap"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/bg_input_sharp"
                android:backgroundTint="#233d4d"
                android:elevation="0dp"
                android:text="Map"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_marginStart="4dp"/>

        </LinearLayout>

        <Button
            android:id="@+id/btnManage"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="#fe7f2d"
            android:elevation="2dp"
            android:text="Manage Event Details"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="#233d4d"
            android:textSize="14sp" />
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>