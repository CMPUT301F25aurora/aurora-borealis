<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginBottom="14dp"
    app:cardCornerRadius="18dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="#2f4858">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="18dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/eventTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Title"
                android:textColor="#fe7f2d"
                android:textSize="20sp"
                android:fontFamily="sans-serif-medium"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_alignParentStart="true"/>

            <ImageButton
                android:id="@+id/btnDeleteEvent"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_alignParentEnd="true"
                android:background="@android:color/transparent"
                android:padding="0dp"
                android:src="@drawable/ic_delete_red"
                android:contentDescription="Delete event" />
        </RelativeLayout>

        <TextView
            android:id="@+id/eventDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Date"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/eventStats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Max spots: 0"
            android:textColor="#B0BEC5"
            android:textSize="13sp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="14dp"
            android:background="#233d4d" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">


            <Button
                android:id="@+id/btnLottery"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_weight="1.5"
                android:layout_marginEnd="6dp"

                android:background="@drawable/bg_input_sharp"
                android:backgroundTint="#233d4d"
                android:text="Lottery"
                android:textAllCaps="false"
                android:textColor="#fe7f2d"
                android:textSize="13sp" />

            <ImageButton
                android:id="@+id/btnShowQR"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_weight="0.75"
                android:layout_marginEnd="6dp"

                android:background="@drawable/bg_input_sharp"
                android:backgroundTint="#233d4d"

                android:src="@drawable/ic_qr"
                android:tint="#fe7f2d"
                android:scaleType="centerInside"
                android:padding="13dp"
                android:contentDescription="QR Code" />


            <ImageButton
                android:id="@+id/btnMap"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_weight="0.75"

                android:background="@drawable/bg_input_sharp"
                android:backgroundTint="#233d4d"

                android:src="@drawable/ic_map"
                android:tint="#fe7f2d"
                android:scaleType="centerInside"
                android:padding="13dp"
                android:contentDescription="Map" />

        </LinearLayout>


        <Button
            android:id="@+id/btnManage"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="14dp"
            android:backgroundTint="#fe7f2d"
            android:text="Manage Event Details"
            android:textColor="#233d4d"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="15sp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
