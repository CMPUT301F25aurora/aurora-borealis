<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="16dp"
    android:layout_marginBottom="12dp"
    android:elevation="4dp">

    <TextView
        android:id="@+id/eventTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Title"
        android:textStyle="bold"
        android:textColor="#111"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/eventDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textColor="#666"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/eventStats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Max spots: 0"
        android:textColor="#666"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/eventStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ“ Location"
        android:textSize="14sp"
        android:textColor="#4A148C"
        android:layout_marginTop="6dp" />

    <!-- Buttons row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <!-- QR button so OrganizerActivity & EventsAdapter can use R.id.btnShowQR -->
        <Button
            android:id="@+id/btnShowQR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QR"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:backgroundTint="?attr/colorPrimary"
            android:paddingHorizontal="16dp"
            android:paddingVertical="6dp"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            android:elevation="2dp"
            android:layout_marginEnd="8dp"
            android:tooltipText="Show QR Code" />

        <!-- Manage button shown only for events owned by this organizer -->
        <Button
            android:id="@+id/btnManageEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manage"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:backgroundTint="#7E57C2"
            android:paddingHorizontal="16dp"
            android:paddingVertical="6dp"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            android:elevation="2dp" />
    </LinearLayout>

</LinearLayout>
