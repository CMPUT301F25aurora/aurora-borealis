<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Needed for Firestore/network -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Aurora">

        <!-- Events list screen -->
        <activity
            android:name=".EventsActivity"
            android:exported="false" />

        <!-- Create Event screen -->
        <activity android:name=".CreateEventActivity" />

        <!-- Admin dashboard -->
        <activity android:name=".AdminActivity" />

        <!-- Organizer / Entrant / Signup -->
        <activity android:name=".OrganizerActivity" />
        <activity android:name=".EntrantActivity" />
        <activity android:name=".SignUpActivity" />



        <!-- Login screen (no longer launcher) -->
        <activity
            android:name=".LoginActivity"
            android:exported="false" />

        <!-- Welcome screen is the launcher -->
        <activity
            android:name=".WelcomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>
